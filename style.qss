QTableWidget {
	color: white;
	padding: 8px 5px;
	padding-top: 5px;
	background-color: #ffffff;
	border: 0px 2px 2px 0 solid #8f8f8f; 
}

QTableWidget QHeaderView::section:horizontal {
	background-color: transparent;
}

QTableWidget::item:nth-child {
	background-color:transparent;
	color:#000000;
}
QTableWidget::item:hover {
	background-color: #3ea6ff; /* Adjust this to match darken(#ffffff, 8%) */
}
QTableWidget::item:selected {
    background-color: #3ea6ff; /* اللون عند تحديد الخلية */
}
QTableWidget QHeaderView {
	color: #ffffff;
	background-color:#8f8f8f;
	border-bottom: solid 2px #d8d8d8;
}

QScrollBar:vertical {
    width: 7px;
    background-color: #f0f0f0;
}

QScrollBar::handle:vertical {
    background-color: #888;
    min-height: 40px;
    border-radius: 3px;
}
