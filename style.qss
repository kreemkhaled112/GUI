/*= Style for mainwindow START
==================================================== */
	#MainWindow {
		background-color: #fff;
	}
	#stackedWidget {
		background-color: rgb(255, 255, 255);
		border-top-left-radius:16px;
		padding:16px 31px;
	}
/*= END
==================================================== */
QPushButton {
  border-radius: 10px;
  background-color: #8f8f8f;
  border: 2px solid #8f8f8f;
  padding: 5px;
}

/*= Style for menu with icon and text START
  ==================================================== */
	/* style for widget */
	#full_menu_widget ,#widget_main,#frame_1{
		background-color: #313a46;
	}

	/* style for QPushButton */
	#full_menu_widget QPushButton {
		background-color: #313a46;
		border:none;
		border-radius: 3px;
		text-align: left;
		padding: 8px 0 8px 15px;
		color: #788596;
	}

	#full_menu_widget QPushButton:hover {
		background-color: rgba( 86, 101, 115, 0.5);
	}

	#full_menu_widget QPushButton:checked {
		background-color: #fff;
		border-bottom-right-radius:28px;
		border-top-right-radius:28px;
	}

	/* style for logo image */
	#logo_label_2 {
		padding: 2px;
	}

	/* style for APP title */
	#logo_label_3 {
		padding-right: 10px;
		color: #fff;
	}
/*= END
  ==================================================== */

/*= Style for search button START
  ==================================================== */
	#search_btn {
		border: none;
	}
/*= END
